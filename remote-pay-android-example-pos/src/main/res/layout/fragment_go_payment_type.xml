<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/select_payment_type"
    android:textAlignment="center"
    android:textSize="22sp"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/rp450_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginRight="20dp"
      android:background="@drawable/btn_rounded"
      android:clickable="true"
      android:focusable="true"
      android:padding="11dp"
      android:text="@string/payment_type_rp450"/>

    <Button
      android:id="@+id/rp350_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginRight="20dp"
      android:background="@drawable/btn_rounded"
      android:clickable="true"
      android:focusable="true"
      android:padding="11dp"
      android:text="@string/payment_type_rp350"/>

    <Button
      android:id="@+id/key_enter_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/btn_rounded"
      android:clickable="true"
      android:focusable="true"
      android:padding="11dp"
      android:text="@string/payment_type_key_enter"/>

  </LinearLayout>

  <Button
    android:id="@+id/cancel_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_rounded"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="11dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="11dp"
    android:text="@string/cancel"/>

</LinearLayout>